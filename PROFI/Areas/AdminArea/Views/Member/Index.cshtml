@model List<Member>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<h1>Product</h1>
<table class="table table-striped table-dark">
    <a class="btn btn-success" asp-action="Create">Create New Member</a>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Member</th>
            <th scope="col">Job</th>
            <th scope="col">Description</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@count</th>
            <td>@Html.Raw(item.Name)</td>
            <td><img src="~/assets/images/@item.Url" alt="Alternate Text" /></td>
            <td>@item.Category</td>
            <td>@item.Description</td>
            <td> <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID"><i class="mdi mdi-delete"></i></a></td>
            <td> <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.ID"><i class="mdi mdi-lead-pencil"></i></a></td>
        </tr>
            count++;
        }
    </tbody>
</table>